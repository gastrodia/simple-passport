<% include header.ejs %>


<script>
    <% if(error){ %>
    alert("<%=error%>");
    <%}%>
    <% if(success){%>
    alert("<%=success%>");
    window.location="/user/login";
    <%}%>
</script>
<div class="container">
    <div class="row clearfix">
        <div class="col-md-12 column">
            <div class="row clearfix">
                <div class="col-md-10 column">
                    <div class="build">
                        <form class="form-horizontal" action="/user/reg" method="post">
                            <fieldset>

                                <!-- Form Name -->
                                <legend>用户注册</legend>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="username">登录账号：</label>
                                    <div class="col-md-5">
                                        <input id="username" name="username" type="text" placeholder="登录用户名（仅支持英文和数字组合）" class="form-control input-md" required="">

                                    </div>
                                </div>

                                <!-- Password input-->
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="password">密　　码：</label>
                                    <div class="col-md-5">
                                        <input id="password" name="password" type="password" placeholder="请输入您的登录密码" class="form-control input-md" required="">

                                    </div>
                                </div>

                                <!-- Password input-->
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="repasswd">确认密码：</label>
                                    <div class="col-md-5">
                                        <input id="repasswd" name="repasswd" type="password" placeholder="请确认您的登录密码" class="form-control input-md" required="">

                                    </div>
                                </div>

                                <!-- Text input-->
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="email">常用邮箱：</label>
                                    <div class="col-md-5">
                                        <input id="email" name="email" type="text" placeholder="example@163.com" class="form-control input-md" required="">

                                    </div>
                                </div>

                                <!-- Button -->
                                <div class="form-group">
                                    <label class="col-md-2 control-label" for="loginBtn"></label>
                                    <div class="col-md-4">
                                        <button id="loginBtn" name="loginBtn" class="btn btn-primary">注册</button>
                                        <a href="/user/login" style="margin-left: 30px;">已有账号，直接登录！</a>
                                    </div>
                                </div>

                            </fieldset>
                        </form>

                    </div>

                </div>
                <div class="col-md-6 column">
                </div>
            </div>
        </div>
    </div>
</div>



<% include footer.ejs%>